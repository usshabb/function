{
  "manifest_version": 3,
  "name": "Canvas Tab",
  "version": "1.0",
  "description": "A Notion-like canvas for your new tab page",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "permissions": [
    "storage",
    "identity",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.mercury.com/*",
    "https://www.googleapis.com/*",
    "https://www.gstatic.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["firebase-sdk/*.js"],
    "matches": ["<all_urls>"]
  }]
}
